# Application Settings
APP_NAME="SolarWinds IT Solutions Chatbot"
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX="/api/v1"
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# SolarWinds API Settings (Required)
SOLARWINDS_API_KEY=your_solarwinds_api_key_here
SOLARWINDS_BASE_URL=https://your-solarwinds-instance.com/api
SOLARWINDS_RATE_LIMIT=10

# Vector Store Settings
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=solutions

# LLM Provider Settings
LLM_PROVIDER=openrouter

# OpenRouter Settings
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-sonnet

# Local LLM Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Embedding Settings
EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Background Job Settings
SYNC_INTERVAL_MINUTES=5
MAX_WORKERS=4

# Performance Settings
MAX_SEARCH_RESULTS=4
RESPONSE_TIMEOUT_SECONDS=30

# Security Settings
ALLOWED_HOSTS=["*"]
