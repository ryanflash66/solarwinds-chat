# Application Settings
APP_NAME="SolarWinds IT Solutions Chatbot"
DEBUG=false
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX="/api/v1"
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# SolarWinds API Settings (Optional - for real data sync)
# Leave empty for development mode (uses mock/sample data)
SOLARWINDS_API_KEY=
SOLARWINDS_BASE_URL=
SOLARWINDS_RATE_LIMIT=10

# Development/Testing Settings
ENABLE_MOCK_DATA=true
MOCK_SOLUTIONS_COUNT=50

# Vector Store Settings
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=solutions

# LLM Provider Settings
LLM_PROVIDER=openrouter

# OpenRouter Settings  
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free

# Recommended models by use case:
# - Free tier: meta-llama/llama-3.1-8b-instruct:free (better than gpt-oss-20b)
# - Production: anthropic/claude-3-sonnet (premium but very good)
# - Cost-effective: openai/gpt-3.5-turbo (good balance)
# - Local alternative: Set LLM_PROVIDER=ollama and configure OLLAMA_MODEL

# Local LLM Settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Embedding Settings
EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Redis Settings (optional for development)
# Redis is used for caching and background job state management
# If Redis is not available, the system falls back to in-memory storage
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_ENABLED=true

# Background Job Settings
SYNC_INTERVAL_MINUTES=5
MAX_WORKERS=4

# Performance Settings
MAX_SEARCH_RESULTS=4
RESPONSE_TIMEOUT_SECONDS=30

# Security Settings
ALLOWED_HOSTS=["*"]
